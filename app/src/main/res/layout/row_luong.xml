<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainlayoutL">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_bottom"
            android:padding="8dp"
            android:paddingLeft="0dp">

            <TextView
                android:id="@+id/ma_nv_luong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="NV1"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/ma"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ten_nv_luong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Huỳnh Thị Hồng Gấm"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/ma_nv_luong"
                app:layout_constraintTop_toBottomOf="@+id/ma_nv_luong" />

            <TextView
                android:id="@+id/luongcb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="20000"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/ten_nv_luong"
                app:layout_constraintTop_toBottomOf="@+id/ten_nv_luong" />

            <TextView
                android:id="@+id/ngaylap2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="20-11-2021"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/ma_nv_luong"
                app:layout_constraintTop_toBottomOf="@+id/luongtl2" />

            <TextView
                android:id="@+id/dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Ngày lập: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã nhân viên: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Họ và tên: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ma" />

            <TextView
                android:id="@+id/Luongcb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Lương cơ bản: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ten" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Lương thực lĩnh: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Luongcb2" />

            <TextView
                android:id="@+id/luongtl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2000"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/ma_nv_luong"
                app:layout_constraintTop_toBottomOf="@+id/luongcb2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>